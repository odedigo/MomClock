<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hitake.www.momclock.MainActivity"
    android:background="@color/abc_input_method_navigation_guard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:id="@+id/timeView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/after_noon"
        android:id="@+id/periodView"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textIsSelectable="false"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:gravity="center_horizontal"
        android:layout_below="@+id/timeView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="here comes the daya and date"
        android:id="@+id/dateView"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/abc_search_url_text_normal"
        android:layout_below="@+id/periodView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50%"
        android:id="@+id/batteryView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/accent_material_dark"
        android:textSize="12dp" />

</RelativeLayout>
